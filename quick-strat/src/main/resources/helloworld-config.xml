<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="helloWorldFactory" class="com.quick.start.service.impl.HelloWorldFactory"></bean> 
		
	<bean id="english" factory-bean="helloWorldFactory" factory-method="createHelloWorldService">
			<constructor-arg value="en"></constructor-arg>
		</bean>
	
	<bean id="helloWorldSpanichService" factory-bean="helloWorldFactory" factory-method="createHelloWorldService">
		<constructor-arg value="es"></constructor-arg>
	</bean>
	
	<beans profile="french">
		<import resource="classpath:/helloworld-french-config.xml"/>
	</beans>
	
	<beans profile="germany">
		<import resource="classpath:/helloworld-germany-config.xml"/>
	</beans>
	


</beans>
